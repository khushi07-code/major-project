<%- layout("/layouts/boilerplate")%>
<body>
    <div class="row">
        <%- include("../includes/backarrow.ejs") %>
        <div class="card col-6 offset-3 intern-card">
           <div class="card-body">
                <div class="internship-text">
                    <h4 class="card-title"><b><%= internship.title %></b></h4>
                    <h6 class="card-subtitle mb-2 text-body-secondary"><%= company.companyname%></h6>
                    <p class="card-text"><%= internship.internshiptype%></p>
                    <h6><b>location:</b></h6>
                    <p class="card-text"><%=internship.location%></p>
                    <h6><b>stipend:</b></h6>
                    <p class="card-text"><%=internship.stipend%>/month</p>
                    <h6><b>description:</b></h6>
                    <p class="card-text"><%=internship.description%></p>
                    <h6><b>requirement:</b></h6>
                    <p class="card-text"><%=internship.requirement%></p>
                    <h6><b>Number of opening:</b></h6>
                    <p class="card-text"><%=internship.openings%></p>
                </div>
                <div class="border-top pt-3">
                    <% if (applied.length==0) { %>
                        <form method="post" action="/student/internship/<%=internship._id%>">
                            <button class="btn btn-primary">Apply</button>
                        </form>
                    <% } else { %>
                        <button class="btn btn-primary" disabled>Apply</button>
                    <% } %>
                </div> 
            </div>
        </div>

    </div>
</body>